<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkshade"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/score_list_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/marko_one"
        android:text="Score"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/score_list_scenario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/marko_one"
        android:text="Scenario"
        android:textColor="@color/text" />

    <ImageView
        android:id="@+id/score_list_hero"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/arythea" />

    <TextView
        android:id="@+id/score_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/marko_one"
        android:text="Date"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/score_list_del"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@android:drawable/btn_dialog" />
</LinearLayout>